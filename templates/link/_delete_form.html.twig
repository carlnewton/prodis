<form method="post" class="float-left ml-1" action="{{ path('link_delete', {'flow': link.flow.id, step: link.parentStep.id, 'id': link.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ link.id) }}">
    <button class="btn btn-outline-danger">Delete</button>
</form>
